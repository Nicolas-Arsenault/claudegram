{
  "name": "claudegram",
  "version": "1.0.0",
  "description": "Control Claude Code from Telegram - Full PTY terminal bridge",
  "main": "dist/index.js",
  "bin": {
    "claudegram": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "postinstall": "chmod +x node_modules/node-pty/prebuilds/darwin-*/spawn-helper 2>/dev/null || true"
  },
  "keywords": [
    "claude",
    "telegram",
    "terminal",
    "pty",
    "bridge",
    "claudegram"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Nicolas-Arsenault/claudegram.git"
  },
  "homepage": "https://github.com/Nicolas-Arsenault/claudegram",
  "bugs": {
    "url": "https://github.com/Nicolas-Arsenault/claudegram/issues"
  },
  "author": "Nicolas Arsenault",
  "license": "MIT",
  "dependencies": {
    "node-pty": "^1.1.0",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
